{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "allowArbitraryExtensions": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "strictNullChecks": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "content-collections": ["./.content-collections/generated"],
      "$$/*": ["./src/styles/*"],
      "@/*": ["./src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".content-collections/generated",
    "src/meta/**/*.json",
    "next.config.mjs",
    "eslint.config.mjs",
    "postcss.config.mjs",
    "site.config.ts",
    "src/data/work2.yaml",
    "src/utils/base32.mjs"
  ],
  "exclude": [
    "node_modules",
    "src/meta/compiled-post.json",
    "src/meta/serialized-posts.json",
    "src/utils.base32.ts",
    "test.json",
    "queries.sql",
    "eslintcache"
  ]
}
